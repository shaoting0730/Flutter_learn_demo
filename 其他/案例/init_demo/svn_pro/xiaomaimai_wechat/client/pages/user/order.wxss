.order-container {
  background-color: white;
  margin-bottom: 20rpx;
}
.order-container .title-bar-right {
  flex: 1;
  text-align: right;
}
.order-container .title-bar-right .order-status {
  font-size: 24rpx;
  color: #616161;
}
.order-container .order-sum-price-bar {
  display: flex;
  flex-direction: row;
  padding: 20rpx 0;
  margin: 0 30rpx;
  border-top: solid 1rpx #EBEBEB;
}
.order-container .order-sum-price-bar .title {
  flex: 1;
  color: #616161;
  font-size: 24rpx;
}
.order-container .order-sum-price-bar .price {
  flex: 1;
  text-align: right;
  color: #FF1717;
  font-size: 24rpx;
  font-weight: bold;
}
.order-container .btn-group {
  text-align: right;
  padding: 20rpx 30rpx;
  padding-bottom: 10rpx;
  border-top: solid 1rpx #EBEBEB;
  border-bottom: solid 1rpx #EBEBEB;
}
.order-container .btn-group .btn-small {
  display: inline-block;
  font-size: 24rpx;
  color: #616161;
  margin-right: 10rpx;
}
.order-container .btn-group .btn-small:last-child {
  margin-right: 0;
}
.order-container:last-child {
  margin-bottom: 0;
}
